{% extends 'base.html.twig' %}

{% block title %}Hello ListingController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    
    {% if listings %}
    {% for l in listings %}
    {{ l.title }} | {{ l.description }} | {{ l.user.email }}
        <img style="width:150px; height: 80px;"  src="{{ asset('uploads/photos/' ~ (l.photo ? l.photo : 'default_photo.jpeg')) }}" alt="">
        <a href="{{ path('edit_listing', {'id': l.id}) }}" class="btn btn-primary">Edit</a>
    </br>
    </br>
       
    {% endfor %}
    {% else %}
        {{  'theres no listings' }}
    {% endif %}
</div>

{% endblock %}
